<template>
    <div>
        <h1>PluralFullName</h1>

        <p>
            <router-link to="{{ route('PluralsKebabDot.create') }}">Create new ModelFullName</router-link>
        </p>

        <table>
            <thead>
                <tr>
                    <th>#</th>
#THEAD
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="ModelCamel, index in PluralCamel">
                    <td>{{ ModelCamel.id }}</td>
